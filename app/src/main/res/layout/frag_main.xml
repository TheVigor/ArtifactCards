<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="@color/artifact_white_f5"
            app:itemIconTint="@color/selector_bottom_item_tint"
            app:itemTextColor="@color/artifact_text_color"
            app:menu="@menu/home_navigation" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@+id/bottom_navigation"
            android:background="@color/artifact_text_grey33" />

    <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_navigation" />

</RelativeLayout>