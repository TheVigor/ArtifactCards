<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Artifact.Home" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PrefsTheme</item>

        <item name="colorControlNormal">@color/artifact_text_color</item>

        <item name="android:windowBackground">@color/artifact_white_f5</item>

        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>

    <style name="Widget.Artifact.Home.ToolBar" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.Artifact.Home.ActionBar</item>
        <item name="popupTheme">
            @style/Artifact.Home.ThemeOverlay.MaterialSheetFab.ActionBar.Popup
        </item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>

    <style name="Artifact.Home.Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Artifact.Home.ThemeOverlay.MaterialSheetFab.ActionBar.Popup" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Widget.Artifact.Home.TabLayout" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/artifact_white</item>
        <item name="android:theme">@style/ThemeOverlay.Artifact.Home.ActionBar</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="ThemeOverlay.Artifact.Home.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/artifact_text_color</item>
        <item name="colorControlNormal">@color/artifact_text_color</item>
        <item name="colorControlHighlight">#8fff</item>
        <item name="colorControlActivated">@color/artifact_text_color</item>
    </style>

    <style name="Artifact.Home.Toolbar.TabLayout" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DownloadDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/artifact_white_f5</item>
        <item name="android:textColor">@color/artifact_text_color</item>
        <item name="colorAccent">#FFFFAB40</item>
    </style>

    <style name="StormSpirit" parent="TextAppearance.AppCompat.Display2">
        <item name="android:textColor">@color/artifact_color</item>
    </style>
    
    <style name="cardview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>

    </style>

    <style name="textview_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/artifact_text_color</item>
    </style>

    <style name="textview_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/artifact_color</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="PrefsTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:layout">@layout/artifact_frag_settings</item>
        <item name="android:listPreferredItemPaddingLeft">5dp</item>
        <item name="android:listPreferredItemPaddingRight">5dp</item>

        <item name="android:textColorPrimary">@color/artifact_text_color</item>
        <item name="android:textColorSecondary">@color/artifact_text_color</item>

    </style>




</resources>