<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Artifact.Home" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/artifact_white_f5</item>

        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>

    <style name="Widget.Artifact.Home.ToolBar" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.Artifact.Home.ActionBar</item>
        <item name="popupTheme">
            @style/Artifact.Home.ThemeOverlay.MaterialSheetFab.ActionBar.Popup
        </item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>

    <style name="Artifact.Home.Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Artifact.Home.ThemeOverlay.MaterialSheetFab.ActionBar.Popup" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Widget.Artifact.Home.TabLayout" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/artifact_white</item>
        <item name="android:theme">@style/ThemeOverlay.Artifact.Home.ActionBar</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="ThemeOverlay.Artifact.Home.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/artifact_text_color</item>
        <item name="colorControlNormal">@color/artifact_text_color</item>
        <item name="colorControlHighlight">#8fff</item>
        <item name="colorControlActivated">@color/artifact_text_color</item>
    </style>

    <style name="Artifact.Home.Toolbar.TabLayout" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">12sp</item>
    </style>


</resources>